#!/usr/bin/env bash
#install nginx and configure it

sudo apt-get update -y && sudo apt-get upgrade -y

sudo apt-get install -y nginx

sudo ufw allow 'Nginx HTTP'
sudo chown -R "$USER":"$USER" /var/www/html
echo "Hello World!" | sudo tee /usr/share/nginx/html/index.nginx-debian.html

sudo sed -i 'listen 80 default_server/a rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGU1wu4/ permanent;' /etc/nginx/sites-available/default
sudo service nginx restart